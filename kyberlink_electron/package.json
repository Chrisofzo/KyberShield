{
  "name": "kybershield-vpn",
  "productName": "KyberShield VPN",
  "version": "1.0.0",
  "description": "Quantum-resistant VPN with post-quantum encryption",
  "main": "main.js",
  "homepage": "https://kybershield.io",
  "author": {
    "name": "KyberShield Technologies",
    "email": "support@kybershield.io"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "vpn",
    "quantum",
    "security",
    "encryption"
  ],
  "build": {
    "appId": "com.kybershield.vpn",
    "productName": "KyberShield VPN",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icons",
      "category": "Network",
      "maintainer": "KyberShield Technologies <support@kybershield.io>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  }
}
